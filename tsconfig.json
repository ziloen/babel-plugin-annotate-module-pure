{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "removeComments": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "erasableSyntaxOnly": true,
    "lib": [
      "ESNext",
    ],
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ]
}